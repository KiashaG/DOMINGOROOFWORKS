@model IEnumerable<DOMINGOROOFWORKSCLDV6211.Models.CustomerInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CUSTOMER INFORMATION</h1>

<p>Below is where all customer details can be viewed, new customers can be created and deleted and updates within the customer infomation can be completed.</p>

<p>
    <a asp-action="Create" class="btn btn-secondary">Add new Customer</a>
</p>


@*For the display of the customer info*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer_Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var cust in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => cust.Customer_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cust.Customer_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cust.Customer_Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cust.Address)
            </td>
            <td>

                <a asp-action="Edit" asp-route-id="@cust.Customer_ID" class="btn btn-light">Edit</a>

                <a asp-action="Details" asp-route-id="@cust.Customer_ID" class="btn btn-info">Details</a>

                <a asp-action="Delete" asp-route-id="@cust.Customer_ID" class="btn btn-dark">Delete</a>

            </td>
        </tr>
    }

</table>



