@model IEnumerable<DOMINGOROOFWORKSCLDV6211.Models.JobTypeInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>JOB TYPE INFOMATION</h1>

<p>Below is where all job type details can be viewed, new job types can be created and deleted and updates within the JobType infomation can be completed.</p>

<p>
    <a asp-action="Create" class="btn btn-secondary">Add new JobType</a>
</p>

@*For the display of the jobtype info*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Job_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobType_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.No_Of_Days)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DailyRate)
        </th>
        <th></th>
    </tr>


    @foreach (var JT in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => JT.Job_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => JT.JobType_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => JT.No_Of_Days)
            </td>
            <td>
                @Html.DisplayFor(modelItem => JT.DailyRate)
            </td>
            <td>

                <a asp-action="Edit" asp-route-id="@JT.Job_ID" class="btn btn-light">Edit</a>

                <a asp-action="Details" asp-route-id="@JT.Job_ID" class="btn btn-info">Details</a>

                <a asp-action="Delete" asp-route-id="@JT.Job_ID" class="btn btn-dark">Delete</a>

            </td>
        </tr>
    }

</table>
