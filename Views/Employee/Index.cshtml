@model IEnumerable<DOMINGOROOFWORKSCLDV6211.Models.EmployeeInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EMPLOYEE INFORMATION</h1>

<p>Below is where all employee details can be viewed, new employees can be created and deleted and updates within the employee infomation can be completed.</p>

<p>
    <a asp-action="Create" class="btn btn-secondary">Add new Employee</a>
</p>

@*For the display of the employee info*@
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Employee_NO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Surname)
        </th>
        <th></th>
    </tr>

    @foreach (var emp in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => emp.Employee_NO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.Employee_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.Employee_Surname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@emp.Employee_NO " class="btn btn-light">Edit</a>

                <a asp-action="Details" asp-route-id="@emp.Employee_NO " class="btn btn-info">Details</a>

                <a asp-action="Delete" asp-route-id="@emp.Employee_NO " class="btn btn-dark">Delete</a>

            </td>
        </tr>
    }

</table>

